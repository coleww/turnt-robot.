

<div style="display: inline-block;">
  <%= form_tag 'status', method: :post do %>
    <%= submit_tag "UPDATE" %>
    <br />
    <%= text_area_tag :status, @user.status, escape: false, maxlength: 1024, size: '50x23', id: "status-form"  %>
  <% end %>
</div>

<div style="display: inline-block;">
  <h5>PREVIEW</h5>
  <%= render partial: 'status', locals: {user: @user} %>
</div>
<br /><br />
<h4>CLASSES 4 SPANS</h4>
<br /><br />
<%= render partial: 'styles' %>
<br /><br />
<%= javascript_tag do %>
  var $status = $(".status");
  var $form = $("#status-form");
  $form.keyup(function(e){$status.html($form.val());});
<% end %>

