<%= render partial: 'styles' %>
<br /><br />

<div style="display: inline-block;">
  <%= form_tag 'status', method: :post do %>
    <%= submit_tag "update status" %>
    (1024 char limit.)
    <br />
    <%= text_area_tag :status, @user.status, escape: false, maxlength: 1024, size: '50x30', id: "status-form"  %>
  <% end %>
</div>

<div style="display: inline-block;">
  <h5>PREVIEW</h5>
  <%= render partial: 'status', locals: {user: @user} %>
</div>

<%= javascript_tag do %>
  var $status = $(".status");
  var $form = $("#status-form");
  $form.keyup(function(e){$status.html($form.val());});
<% end %>